enum AuthProvider {
  LOCAL
  GOOGLE
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        BigInt   @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  gstin     String?
  logoUrl   String?
  isActive  Boolean  @default(true)

  users     User[]
  invoices  InvoiceBill[]
  expenses  ExpenseBill[]
  kpis      KpiSnapshot[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("organizations")
}

enum UserType {
  INTERNAL
  EXTERNAL
  ADMIN
}

model User {
  id           BigInt   @id @default(autoincrement())
  orgId        BigInt
  userType     String
  email        String  @unique
  name         String
  phone        String?
  address      String?

  passwordHash String?
  authProvider AuthProvider @default(LOCAL)
  googleId     String?      @unique

  role          String  @default("USER")
  isActive      Boolean @default(true)

  organization Organization @relation(fields: [orgId], references: [id])
  clients       Client[]
  invoices      InvoiceBill[]
  expenses      ExpenseBill[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model Client {
  id          BigInt   @id @default(autoincrement())
  userId       BigInt

  name        String   @db.Citext
  email       String?
  phone       String?
  address     String?
  gstin       String?
  country     String?   // ISO country code: IN, US, AE, UK
  companyType String?   // Private Ltd, LLP, Individual, etc.
  taxId       String?  // GSTIN / VAT ID / EIN
  taxSystem   TaxSystem @default(NONE)

  isActive    Boolean  @default(true)

  user        User         @relation(fields: [userId], references: [id])
  invoices    InvoiceBill[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@unique([userId, name]) // Same client name allowed in different orgs and different user
  @@map("clients")
}

enum TaxSystem {
  GST     // India
  VAT     // UAE, UK, EU
  SALES   // US Sales Tax
  NONE    // No tax / export
}

model InvoiceBill {
  id            BigInt   @id @default(autoincrement())
  orgId         BigInt
  clientId      BigInt?
  customerId    BigInt

  invoiceNumber String
  issueDate     DateTime
  dueDate       DateTime

  subtotal      Decimal  @db.Decimal(15, 2) @default(0.00)
  taxAmount     Decimal  @db.Decimal(15, 2) @default(0.00)
  discount        Decimal  @db.Decimal(15, 2)  @default(0.00)
  totalAmount   Decimal  @db.Decimal(15, 2)
  paidAmount    Decimal  @db.Decimal(15, 2) @default(0.00)

  status        String   @default("DRAFT")
  category      String   @default("OTHER")  
  pdfUrl        String?
  sentAt        DateTime?
  paidAt        DateTime?

  sellerName      String
  sellerAddress   String
  sellerTaxId     String?  // GSTIN
  iecCode         String?  // IEC Code
  lutFiled        Boolean  @default(false)
  buyerTaxId      String?
  currency        String   @default("USD")
  placeOfSupply   String?
  reverseCharge   Boolean  @default(false)
  shipToName      String?
  shipToAddress   String?
  countryOfOrigin String?
  incoterms       String?
  taxSummary      Json?
  sacCode         String?  // Header service code
  bankDetails     Json?    // {"swift": "..."}
  notes           Text?    // "GST @0% - Export under LUT"

  organization  Organization @relation(fields: [orgId], references: [id])
  customer      User         @relation(fields: [customerId], references: [id])
  client        Client? @relation(fields: [clientId], references: [id])
  items         InvoiceBillItem[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([clientId])
  @@map("invoice_bills")
}

model InvoiceBillItem {
  id          BigInt   @id @default(autoincrement())
  invoiceId  BigInt

  itemName    String
  description String?
  quantity    Decimal  @db.Decimal(10, 2) @default(1)
  unitPrice   Decimal  @db.Decimal(15, 2)
  taxRate     Decimal  @db.Decimal(15, 2) @default(0.00)
  totalPrice  Decimal  @db.Decimal(10, 2)

  invoice     InvoiceBill @relation(fields: [invoiceId], references: [id])

  createdAt   DateTime @default(now())

  @@map("invoice_bill_items")
}

model ExpenseBill {
  id           BigInt   @id @default(autoincrement())
  orgId        BigInt
  userId       BigInt?

  merchant     String?
  expenseDate  DateTime
  totalAmount  Decimal  @db.Decimal(15, 2)
  category     String   @default("OTHER")
  paymentMethod String?

  receiptUrl   String?
  ocrExtracted Boolean  @default(false)
  ocrConfidence Decimal?

  organization Organization @relation(fields: [orgId], references: [id])
  user         User?        @relation(fields: [userId], references: [id])
  items        ExpenseBillItem[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("expense_bills")
}

model ExpenseBillItem {
  id          BigInt   @id @default(autoincrement())
  expenseId  BigInt

  itemName   String?
  quantity   Decimal   @db.Decimal(15, 2) @default(1)
  unitPrice  Decimal   @db.Decimal(15, 2)
  totalPrice Decimal   @db.Decimal(15, 2)

  expense    ExpenseBill @relation(fields: [expenseId], references: [id])

  createdAt  DateTime @default(now())

  @@map("expense_bill_items")
}

model KpiSnapshot {
  id                      BigInt   @id @default(autoincrement())
  orgId                   BigInt
  snapshotDate            DateTime

  totalIncome             Decimal   @db.Decimal(15, 2) @default(0.00)
  totalExpenses           Decimal   @db.Decimal(15, 2) @default(0.00)
  netCashflow             Decimal   @db.Decimal(15, 2) @default(0.00)

  outstandingReceivables  Decimal   @db.Decimal(15, 2) @default(0.00)
  overdueInvoicesCount    Int      @default(0)

  topExpenseCategory      String?
  expenseGrowthPercent    Decimal?  @db.Decimal(15, 2)

  organization            Organization @relation(fields: [orgId], references: [id])

  createdAt               DateTime @default(now())

  @@unique([orgId, snapshotDate])
  @@map("kpi_snapshots")
}
