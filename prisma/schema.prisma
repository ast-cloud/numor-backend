enum AuthProvider {
  LOCAL
  GOOGLE
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        BigInt   @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  address   String?
  gstin     String?
  logoUrl   String?
  isActive  Boolean  @default(true)

  users     User[]
  invoices  InvoiceBill[]
  expenses  ExpenseBill[]
  kpis      KpiSnapshot[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("organizations")
}

enum UserType {
  INTERNAL
  EXTERNAL
  ADMIN
}

model User {
  id           BigInt   @id @default(autoincrement())
  orgId        BigInt
  userType     String
  email        String  @unique
  name         String
  phone        String?
  address      String?

  passwordHash String?
  authProvider AuthProvider @default(LOCAL)
  googleId     String?      @unique

  role          String  @default("USER")
  isActive      Boolean @default(true)

  organization Organization @relation(fields: [orgId], references: [id])
  clients       Client[]
  invoices      InvoiceBill[]
  expenses      ExpenseBill[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model Client {
  id          BigInt   @id @default(autoincrement())
  userId       BigInt

  name        String   @db.Citext
  email       String?
  phone       String?
  address     String?
  gstin       String?
  country     String?   // ISO country code: IN, US, AE, UK
  companyType String?   // Private Ltd, LLP, Individual, etc.
  taxId       String?  // GSTIN / VAT ID / EIN
  taxSystem   TaxSystem @default(NONE)

  isActive    Boolean  @default(true)

  user        User         @relation(fields: [userId], references: [id])
  invoices    InvoiceBill[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@unique([userId, name]) // Same client name allowed in different orgs and different user
  @@map("clients")
}

enum TaxSystem {
  GST     // India
  VAT     // UAE, UK, EU
  SALES   // US Sales Tax
  NONE    // No tax / export
}

model InvoiceBill {
  id            BigInt   @id @default(autoincrement())
  orgId         BigInt
  clientId      BigInt?
  customerId    BigInt

  invoiceNumber String
  invoiceType   String   @default("TAX") // TAX | PROFORMA | COMMERCIAL
  issueDate     DateTime
  dueDate       DateTime
  paymentTerms  String?  // Net 15, Net 30, Due on receipt

  currency        String   @default("USD") //The currency the client pays in (USD, EUR, GBP).
  exchangeRate    Decimal? @db.Decimal(10, 4) //The FX rate on the invoice date (important for accounting accuracy).
  baseCurrency    String?  @default("INR") //Internal reporting currency (e.g., INR equivalent for Indian books).
  baseAmount      Decimal? @db.Decimal(15, 2)

  subtotal      Decimal  @db.Decimal(15, 2) @default(0.00)
  discount      Decimal  @db.Decimal(15, 2) @default(0.00)
  taxAmount     Decimal  @db.Decimal(15, 2) @default(0.00) //GST / VAT / Sales Tax (or zero for exports)
  shippingCost  Decimal  @db.Decimal(15, 2) @default(0.00)
  totalAmount   Decimal  @db.Decimal(15, 2)
  paidAmount    Decimal  @db.Decimal(15, 2) @default(0.00) //What client has already paid
  balanceDue    Decimal  @db.Decimal(15, 2) //What’s still pending

  status        String   @default("DRAFT")  // DRAFT | SENT | PAID | OVERDUE
  category      String   @default("OTHER")  
  pdfUrl        String?
  sentAt        DateTime?
  paidAt        DateTime?

  // Seller Snapshot
  sellerName      String
  sellerAddress   String
  sellerEmail     String?
  sellerPhone     String?
  sellerCountry   String?
  sellerTaxId     String?  // GSTIN / VAT
  iecCode         String?  //Required for international payments (India)
  lutFiled        Boolean  @default(false) //Confirms GST zero-rated export compliance

  // Buyer Snapshot
  buyerName       String
  buyerAddress    String
  buyerCountry    String
  buyerTaxId      String? // VAT / EIN / GSTIN

  // Tax & Compliance
  taxType         String   @default("NONE") // GST | VAT | SALES_TAX | NONE
  placeOfSupply   String? //Determines which country’s tax rules apply.
  reverseCharge   Boolean  @default(false) //Means client pays the tax, not the seller (common in EU).
  reverseReason   String?
  sacCode         String? //Government service classification code (India GST).
  taxSummary      Json? //Structured breakdown of all taxes applied (rates, amounts).

  // Shipping / Trade
  shipToName        String?
  shipToAddress     String?
  countryOfOrigin   String?
  countryOfDestination String?
  incoterms         String? //International trade rules (FOB, CIF, DDP)

  // Payment
  bankDetails     Json? // SWIFT, IBAN, IFSC, PayPal, Wise
  paymentLink     String?

  // Legal
  jurisdiction    String? // Which country’s laws apply in case of dispute.
  lateFeePolicy   String? //Penalty or interest for delayed payments.
  notes           Text? //Free-text section for compliance or special instructions

  pdfUrl        String? //Stored invoice copy
  sentAt        DateTime? //Audit trail
  paidAt        DateTime? //System Tracking

  organization  Organization @relation(fields: [orgId], references: [id])
  customer      User         @relation(fields: [customerId], references: [id])
  client        Client? @relation(fields: [clientId], references: [id])
  items         InvoiceBillItem[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([clientId])
  @@map("invoice_bills")
}

model InvoiceBillItem {
  id          BigInt   @id @default(autoincrement())
  invoiceId  BigInt

  itemName    String
  description String?
  quantity    Decimal  @db.Decimal(10, 2) @default(1)
  unitPrice   Decimal  @db.Decimal(15, 2)
  taxRate     Decimal  @db.Decimal(15, 2) @default(0.00)
  totalPrice  Decimal  @db.Decimal(10, 2)

  invoice     InvoiceBill @relation(fields: [invoiceId], references: [id])

  createdAt   DateTime @default(now())

  @@map("invoice_bill_items")
}

model ExpenseBill {
  id           BigInt   @id @default(autoincrement())
  orgId        BigInt
  userId       BigInt?

  merchant     String?
  expenseDate  DateTime
  totalAmount  Decimal  @db.Decimal(15, 2)
  category     String   @default("OTHER")
  paymentMethod String?

  receiptUrl   String?
  ocrExtracted Boolean  @default(false)
  ocrConfidence Decimal?

  organization Organization @relation(fields: [orgId], references: [id])
  user         User?        @relation(fields: [userId], references: [id])
  items        ExpenseBillItem[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("expense_bills")
}

model ExpenseBillItem {
  id          BigInt   @id @default(autoincrement())
  expenseId  BigInt

  itemName   String?
  quantity   Decimal   @db.Decimal(15, 2) @default(1)
  unitPrice  Decimal   @db.Decimal(15, 2)
  totalPrice Decimal   @db.Decimal(15, 2)

  expense    ExpenseBill @relation(fields: [expenseId], references: [id])

  createdAt  DateTime @default(now())

  @@map("expense_bill_items")
}

model KpiSnapshot {
  id                      BigInt   @id @default(autoincrement())
  orgId                   BigInt
  snapshotDate            DateTime

  totalIncome             Decimal   @db.Decimal(15, 2) @default(0.00)
  totalExpenses           Decimal   @db.Decimal(15, 2) @default(0.00)
  netCashflow             Decimal   @db.Decimal(15, 2) @default(0.00)

  outstandingReceivables  Decimal   @db.Decimal(15, 2) @default(0.00)
  overdueInvoicesCount    Int      @default(0)

  topExpenseCategory      String?
  expenseGrowthPercent    Decimal?  @db.Decimal(15, 2)

  organization            Organization @relation(fields: [orgId], references: [id])

  createdAt               DateTime @default(now())

  @@unique([orgId, snapshotDate])
  @@map("kpi_snapshots")
}
